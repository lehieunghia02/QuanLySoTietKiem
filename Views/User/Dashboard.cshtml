@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<link rel="stylesheet" href="/css/user/dashboard.css">

<div class="dashboard-container py-4">
    <div class="container">
        <!-- Welcome section -->
        <div class="welcome-section mb-4 mb-md-5 animate__animated animate__fadeIn">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-8">
                    <div class="text-center mb-3 mb-md-4">
                        <h2 class="fw-bold text-primary">
                            <i class="bi bi-piggy-bank me-2"></i>
                            Easy Saving – A Secure Future
                            <i class="bi bi-stars ms-2"></i>
                        </h2>
                        <p class="text-muted fst-italic">The starting point for your dreams</p>
                    </div>

                    <div class="card border-0 shadow-sm rounded-4 mb-4 welcome-card">
                        <div class="card-body p-3 p-md-4">
                            <div class="d-flex flex-column flex-md-row align-items-center mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3 bg-primary text-white">
                                        <span>@(User.Identity.Name.Substring(0, 1).ToUpper())</span>
                                    </div>
                                    <div>
                                        <h5 class="mb-1">Hello, @User.Identity.Name!</h5>
                                    </div>
                                </div>
                                <!-- Current time -->
                                <div class="ms-md-auto text-center text-md-end mt-2 mt-md-0">
                                    <p class="mb-0 text-muted">Current time</p>
                                    <h5 class="mb-0 text-primary" id="current-time">@DateTime.Now.ToString("HH:mm:ss")
                                    </h5>
                                </div>
                            </div>
                            <!-- Alert -->
                            <div class="alert alert-success border-0 rounded-3 mb-0">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-info-circle-fill text-success fs-4 me-3"></i>
                                    <div>
                                        <p class="mb-0">
                                            @ViewBag.ThongBao
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary cards -->
        <div class="summary-cards mb-4 mb-md-5">
            <div class="row g-3 g-md-4">
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 h-100 summary-card bg-gradient-blue">
                        <div class="card-body p-3 p-md-4">
                            <div class="d-flex align-items-center mb-2 mb-md-3">
                                <div class="icon-circle bg-white text-primary me-2 me-md-3">
                                    <i class="bi bi-wallet2"></i>
                                </div>
                                <h5 class="card-title mb-0 text-white">Total Accounts</h5>
                            </div>
                            @* Hien thi thong tin *@
                            <h2 class="display-6 fw-bold text-white mb-0">@(ViewBag.ActiveAccounts +
                                ViewBag.ClosedAccounts)</h2>
                            <p class="text-white-50 mt-2 mb-0">Active: @ViewBag.ActiveAccounts</p>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 h-100 summary-card bg-gradient-green">
                        <div class="card-body p-3 p-md-4">
                            <div class="d-flex align-items-center mb-2 mb-md-3">
                                <div class="icon-circle bg-white text-success me-2 me-md-3">
                                    <i class="bi bi-cash-stack"></i>
                                </div>
                                <h5 class="card-title mb-0 text-white">Total Amount</h5>
                            </div>
                            <h2 class="display-6 fw-bold text-white mb-0">@(ViewBag.TotalAmount?.ToString("N0") ?? "0")
                                đ</h2>
                            <p class="text-white-50 mt-2 mb-0">Last updated</p>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 h-100 summary-card bg-gradient-purple">
                        <div class="card-body p-3 p-md-4">
                            <div class="d-flex align-items-center mb-2 mb-md-3">
                                <div class="icon-circle bg-white text-purple me-2 me-md-3">
                                    <i class="bi bi-calendar-check"></i>
                                </div>
                                <h5 class="card-title mb-0 text-white">New Accounts</h5>
                            </div>
                            <h2 class="display-6 fw-bold text-white mb-0">@ViewBag.CountSoTietKiemInMonth</h2>
                            <p class="text-white-50 mt-2 mb-0">Month @DateTime.Now.Month/@DateTime.Now.Year</p>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm rounded-4 h-100 summary-card bg-gradient-orange">
                        <div class="card-body p-3 p-md-4">
                            <div class="d-flex align-items-center mb-2 mb-md-3">
                                <div class="icon-circle bg-white text-orange me-2 me-md-3">
                                    <i class="bi bi-graph-up-arrow"></i>
                                </div>
                                <h5 class="card-title mb-0 text-white">Interest Rate</h5>
                            </div>
                            <h2 class="display-6 fw-bold text-white mb-0">@(ViewBag.AverageInterestRate?.ToString("N2")
                                ?? "0")%</h2 >
                            <p class="text-white-50 mt-2 mb-0">Average interest rate</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts section -->
        <div class="charts-section mb-4 mb-md-5">
            <div class="row g-3 g-md-4">
                <!-- Polar Area Chart -->
                <div class="col-md-6 col-lg-3 mb-3 mb-lg-0">
                    <div class="card border-0 shadow-sm rounded-4 h-100">
                        <div class="card-body p-3 p-md-4">
                            <h5 class="card-title fw-bold mb-3 mb-md-4 text-center">Savings Account Ratio</h5>
                            <div class="chart-container">
                                <canvas id="polarChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Doughnut Chart -->
                <div class="col-md-6 col-lg-3 mb-3 mb-lg-0">
                    <div class="card border-0 shadow-sm rounded-4 h-100">
                        <div class="card-body p-3 p-md-4">
                            <h5 class="card-title fw-bold mb-3 mb-md-4 text-center">Savings Type Distribution</h5>
                            <div class="chart-container">
                                <canvas id="doughnutChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Monthly Chart -->
                <div class="col-md-6 col-lg-3 mb-3 mb-lg-0">
                    <div class="card border-0 shadow-sm rounded-4 h-100">
                        <div class="card-body p-3 p-md-4">
                            <h5 class="card-title fw-bold mb-3 mb-md-4 text-center">Monthly Statistics</h5>
                            <div class="chart-container">
                                <canvas id="monthlyChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Daily Chart -->
                <div class="col-md-6 col-lg-3 mb-3 mb-lg-0">
                    <div class="card border-0 shadow-sm rounded-4 h-100">
                        <div class="card-body p-3 p-md-4">
                            <h5 class="card-title fw-bold mb-3 mb-md-4 text-center">Daily Statistics</h5>
                            <div class="chart-container">
                                <canvas id="dailyChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions section -->
        <div class="quick-actions mt-4 mt-md-5">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card border-0 shadow-lg rounded-4 quick-actions-card">
                        <div class="card-body p-3 p-md-4">
                            <div class="d-flex align-items-center mb-3 mb-md-4">
                                <div class="quick-actions-icon me-3">
                                    <i class="bi bi-lightning-charge-fill"></i>
                                </div>
                                <h4 class="card-title fw-bold mb-0">Quick Actions</h4>
                            </div>

                            <div class="row g-3 g-md-4">
                                <div class="col-md-4">
                                    <div class="action-card new-account">
                                        <a href="/SoTietKiem/OpenSavingsAccount" class="action-link">
                                            <div class="action-icon">
                                                <i class="bi bi-plus-circle-fill"></i>
                                            </div>
                                            <div class="action-content">
                                                <h5>Open a New Savings Account</h5>
                                                <p class="mb-0">Create a savings account with attractive interest rates</p>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="action-card account-list">
                                        <a href="/SoTietKiem/Index" class="action-link">
                                            <div class="action-icon">
                                                <i class="bi bi-list-ul"></i>
                                            </div>
                                            <div class="action-content">
                                                <h5>Savings Account List</h5>
                                                <p class="mb-0">View and manage your savings accounts</p>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="action-card profile">
                                        <a href="/User/Profile" class="action-link">
                                            <div class="action-icon">
                                                <i class="bi bi-person-circle"></i>
                                            </div>
                                            <div class="action-content">
                                                <h5>Profile Information</h5>
                                                <p class="mb-0">Update your account information</p>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Cập nhật thời gian hiện tại
        setInterval(function () {
            const now = new Date();
            const timeString = now.getHours().toString().padStart(2, '0') + ':' +
                now.getMinutes().toString().padStart(2, '0') + ':' +
                now.getSeconds().toString().padStart(2, '0');
            document.getElementById('current-time').innerText = timeString;
        }, 1000);

        // Polar Area Chart
        const polarCtx = document.getElementById('polarChart').getContext('2d');
        new Chart(polarCtx, {
            type: 'polarArea',
            data: {
                labels: ['Active', 'Closed'],
                datasets: [{
                    data: [@ViewBag.ActiveAccounts, @ViewBag.ClosedAccounts],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(255, 99, 132, 0.7)'
                    ],
                    borderColor: [
                        'rgb(75, 192, 192)',
                        'rgb(255, 99, 132)'
                    ],
                    borderWidth: 1,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            boxWidth: 12,
                            padding: 10,
                            font: {
                                size: function () {
                                    return window.innerWidth < 768 ? 10 : 12;
                                }
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Savings Account Ratio',
                        font: {
                            size: function () {
                                return window.innerWidth < 768 ? 12 : 14;
                            },
                            weight: 'bold'
                        },
                        padding: 10
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                let label = context.label || '';
                                let value = context.raw || 0;
                                let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                let percentage = ((value * 100) / total).toFixed(1);
                                return `${label}: ${value} (${percentage}%)`;
                            }
                        }
                    }
                },
                animation: {
                    animateRotate: true,
                    animateScale: true
                }
            }
        });

        // Doughnut Chart
        const doughnutCtx = document.getElementById('doughnutChart').getContext('2d');
        new Chart(doughnutCtx, {
            type: 'doughnut',
            data: {
                labels: @Json.Serialize(ViewBag.SavingTypes),
                datasets: [{
                    data: @Json.Serialize(ViewBag.SavingTypeCounts),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                    ],
                    borderColor: [
                        'rgb(255, 99, 132)',
                        'rgb(54, 162, 235)',
                        'rgb(255, 206, 86)',
                    ],
                    borderWidth: 1,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            boxWidth: 12,
                            padding: 10,
                            font: {
                                size: function () {
                                    return window.innerWidth < 768 ? 10 : 12;
                                }
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Number of Accounts by Type',
                        font: {
                            size: function () {
                                return window.innerWidth < 768 ? 12 : 14;
                            },
                            weight: 'bold'
                        },
                        padding: 10
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                let label = context.label || '';
                                let value = context.raw || 0;
                                let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                let percentage = ((value * 100) / total).toFixed(1);
                                return `${label}: ${value} accounts (${percentage}%)`;
                            }
                        }
                    }
                },
                cutout: '70%',
                animation: {
                    animateScale: true,
                    animateRotate: true
                }
            }
        });

        // Monthly Chart
        const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
        new Chart(monthlyCtx, {
            type: 'bar',
            data: {
                labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'],
                datasets: [
                    {
                        label: 'Opened Accounts',
                        data: @Json.Serialize(ViewBag.MonthlyOpenData),
                        backgroundColor: 'rgba(75, 192, 192, 0.5)',
                        borderColor: 'rgb(75, 192, 192)',
                        borderWidth: 1
                    },
                    {
                        label: 'Closed Accounts',
                        data: @Json.Serialize(ViewBag.MonthlyCloseData),
                        backgroundColor: 'rgba(255, 99, 132, 0.5)',
                        borderColor: 'rgb(255, 99, 132)',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1,
                            font: {
                                size: function () {
                                    return window.innerWidth < 768 ? 10 : 12;
                                }
                            }
                        }
                    },
                    x: {
                        ticks: {
                            font: {
                                size: function () {
                                    return window.innerWidth < 768 ? 10 : 12;
                                }
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            boxWidth: 12,
                            padding: 10,
                            font: {
                                size: function () {
                                    return window.innerWidth < 768 ? 10 : 12;
                                }
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Statistics for year ' + new Date().getFullYear(),
                        font: {
                            size: function () {
                                return window.innerWidth < 768 ? 12 : 14;
                            },
                            weight: 'bold'
                        }
                    }
                }
            }
        });

        // Daily Chart
        const dailyCtx = document.getElementById('dailyChart').getContext('2d');
        new Chart(dailyCtx, {
            type: 'line',
            data: {
                labels: Array.from({ length: @ViewBag.DaysInMonth}, (_, i) => i + 1),
                datasets: [
                    {
                        label: 'Opened Accounts',
                        data: @Json.Serialize(ViewBag.DailyOpenData),
                        borderColor: 'rgb(75, 192, 192)',
                        tension: 0.1,
                        fill: false
                    },
                    {
                        label: 'Closed Accounts',
                        data: @Json.Serialize(ViewBag.DailyCloseData),
                        borderColor: 'rgb(255, 99, 132)',
                        tension: 0.1,
                        fill: false
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1,
                            font: {
                                size: function () {
                                    return window.innerWidth < 768 ? 10 : 12;
                                }
                            }
                        }
                    },
                    x: {
                        ticks: {
                            font: {
                                size: function () {
                                    return window.innerWidth < 768 ? 10 : 12;
                                }
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            boxWidth: 12,
                            padding: 10,
                            font: {
                                size: function () {
                                    return window.innerWidth < 768 ? 10 : 12;
                                }
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Statistics for month ' + (new Date().getMonth() + 1),
                        font: {
                            size: function () {
                                return window.innerWidth < 768 ? 12 : 14;
                            },
                            weight: 'bold'
                        }
                    }
                }
            }
        });

        // Responsive chart resize
        window.addEventListener('resize', function () {
            Chart.instances.forEach(chart => {
                chart.resize();
            });
        });
    </script>
}

@section Styles {
    <style>
        /* Styles for Quick Actions */
        .quick-actions-card {
            background: linear-gradient(145deg, #ffffff, #f8f9fa);
            transition: all 0.3s ease;
        }

        .quick-actions-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(45deg, #007bff, #0056b3);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }

        .action-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            height: 100%;
            overflow: hidden;
        }

        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .action-link {
            display: block;
            padding: 1.5rem;
            color: inherit;
            text-decoration: none;
            height: 100%;
        }

        .action-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }

        .action-card:hover .action-icon {
            transform: scale(1.1);
        }

        .action-content h5 {
            font-weight: 600;
            margin-bottom: 0.5rem;
            transition: color 0.3s ease;
        }

        .action-content p {
            color: #6c757d;
            font-size: 0.9rem;
        }

        /* Specific styles for each card */
        .new-account .action-icon {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
        }

        .account-list .action-icon {
            background: linear-gradient(45deg, #007bff, #00c6ff);
            color: white;
        }

        .profile .action-icon {
            background: linear-gradient(45deg, #6f42c1, #a66efa);
            color: white;
        }

        .new-account:hover .action-content h5 {
            color: #28a745;
        }

        .account-list:hover .action-content h5 {
            color: #007bff;
        }

        .profile:hover .action-content h5 {
            color: #6f42c1;
        }

        /* Animation for cards */
        @@keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(20px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .action-card {
                animation: fadeInUp 0.5s ease forwards;
            }

            .action-card:nth-child(1) {
                animation-delay: 0.1s;
            }

            .action-card:nth-child(2) {
                animation-delay: 0.2s;
            }

            .action-card:nth-child(3) {
                animation-delay: 0.3s;
            }
        </style>
        }