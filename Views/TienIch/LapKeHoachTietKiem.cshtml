@model QuanLySoTietKiem.Models.SoSanhGoiTietKiem.KeHoachTietKiemModel

<div class="container py-5">
  <div class="card shadow-sm border-0">
    <div class="card-header bg-light border-0">
      <h3 class="card-title mb-0">
        <i class="bi bi-piggy-bank me-2 text-primary"></i>
        Savings Planning
      </h3>
    </div>
    <div class="card-body">
      <form asp-action="LapKeHoachTietKiem" method="post">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group mb-3">
              <label asp-for="MucTieuTietKiem">Savings goal</label>
              <div class="input-group">
                <input asp-for="MucTieuTietKiem" class="form-control money-input" />
                <span class="input-group-text">VND</span>
              </div>
              <span asp-validation-for="MucTieuTietKiem" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-semibold">Saving type</label>
              <div class="btn-group w-100" role="group">
                <input type="radio" class="btn-check" name="SavingType" id="monthly" value="Monthly" checked>
                <label class="btn btn-outline-primary" for="monthly">
                  <i class="bi bi-calendar-month me-1"></i> Monthly saving
                </label>

                <input type="radio" class="btn-check" name="SavingType" id="onetime" value="OneTime">
                <label class="btn btn-outline-primary" for="onetime">
                  <i class="bi bi-cash-stack me-1"></i> One-time saving
                </label>
              </div>
            </div>
            <div class="form-group mb-3">
              <label asp-for="ThoiGianThang">Savings duration (months)</label>
              <select asp-for="ThoiGianThang" class="form-select">
                <option value="">-- Select duration --</option>
                <option value="3">3 months</option>
                <option value="6">6 months</option>
                <option value="9">9 months</option>
                <option value="12">12 months (Most popular ‚≠ê)</option>
                <option value="18">18 months</option>
                <option value="24">24 months</option>
                <option value="36">36 months</option>
                <option value="48">48 months</option>
                <option value="60">60 months</option>
              </select>
            </div>
          </div>
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-calculator"></i> Generate Plan
          </button>
        </div>
      </form>

      @if (Model?.ChiTietKeHoach != null && Model.ChiTietKeHoach.Any())
      {
        <div class="mt-4">
          <div class="alert alert-info rounded-3">
            <h5 class="fw-semibold mb-3">Calculation Results:</h5>
            @{
              var progress = Model.MucTieuTietKiem > 0
                  ? Math.Min(100, Model.ChiTietKeHoach.Last().TyLeDatMucTieu)
                  : 0;
            }
            <div class="mb-3">
              <div class="d-flex justify-content-between mb-1">
                <span class="fw-semibold">Goal progress</span>
                <span>@progress.ToString("N1")%</span>
              </div>
              <div class="progress" style="height: 10px;">
                <div class="progress-bar bg-success"
                     role="progressbar"
                     style="width:@progress%">
                </div>
              </div>
            </div>

            <ul class="list-group list-group-flush mb-3">
              <li class="list-group-item d-flex justify-content-between">
                <span>Monthly contribution</span>
                <strong>@Model.SoTienGuiHangThang.ToString("N0") VND</strong>
              </li>
              <li class="list-group-item d-flex justify-content-between">
                <span>Total estimated interest</span>
                <strong>@Model.TongTienLai.ToString("N0") VND</strong>
              </li>
            </ul>
          </div>

          <div class="d-flex gap-2 mt-3">
            <a asp-action="ExportPlanPdf" class="btn btn-outline-danger">
              <i class="bi bi-file-earmark-pdf me-1"></i> Export PDF
            </a>
            <a asp-action="ExportPlanExcel" class="btn btn-outline-success">
              <i class="bi bi-file-earmark-excel me-1"></i> Export Excel
            </a>
          </div>

          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Month</th>
                  <th>Contribution</th>
                  <th>Monthly interest</th>
                  <th>Total accumulated</th>
                  <th>% of goal</th>
                </tr>
              </thead>
              <tbody>
                @foreach (var thang in Model.ChiTietKeHoach)
                {
                  <tr>
                    <td>@thang.Thang</td>
                    <td>@thang.SoTienGui.ToString("N0") VND</td>
                    <td>@thang.TienLaiThang.ToString("N0") VND</td>
                    <td>@thang.TongTichLuy.ToString("N0") VND</td>
                    <td>@thang.TyLeDatMucTieu.ToString("N2")%</td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      }
    </div>
  </div>
</div>

@section Scripts {
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
  <script>
    $(document).ready(function () {
      $('.money-input').on('input', function () {
        let value = $(this).val().replace(/\D/g, '');
        $(this).val(new Intl.NumberFormat('vi-VN').format(value));
      });

      $('form').on('submit', function () {
        $('.money-input').each(function () {
          $(this).val($(this).val().replace(/\D/g, ''));
        });
      });
    });
  </script>
}