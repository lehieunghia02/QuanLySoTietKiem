<section class="contact-section">
  <div class="container">
    <h2 class="section-title">Contact with us</h2>
    <div class="row">
      <div class="col-md-4 mb-4 mb-md-0">
        <div class="contact-card p-4 h-100">
          <div class="contact-icon primary mx-auto">
            <i class="bi bi-geo-alt"></i>
          </div>
          <h3 class="contact-title text-center">Address</h3>
          <p class="contact-text text-center">Thu Duc City, Ho Chi Minh City, Vietnam</p>
        </div>
      </div>
      <div class="col-md-4 mb-4 mb-md-0">
        <div class="contact-card p-4 h-100">
          <div class="contact-icon success mx-auto">
            <i class="bi bi-envelope"></i>
          </div>
          <h3 class="contact-title text-center">Email</h3>
          <p class="contact-text text-center">
            admin@lehieunghia.io.vn
          </p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="contact-card p-4 h-100">
          <div class="contact-icon info mx-auto">
            <i class="bi bi-telephone"></i>
          </div>
          <h3 class="contact-title text-center">Phone</h3>
          <p class="contact-text text-center">(+84) 399864429</p>
        </div>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-lg-6 mb-4 mb-lg-0">
        <div class="map-container">
          <div class="ratio ratio-16x9">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3916.5178859190037!2d106.8200844757878!3d10.999716589162944!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3174ddcfedcb1f4b%3A0x9e4be9f939256904!2sHieu%20Nghia%20Software!5e0!3m2!1sen!2s!4v1740852277124!5m2!1sen!2s"
